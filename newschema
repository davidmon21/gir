create table notes( note_id INTEGER PRIMARY KEY, name TEXT, date TEXT NOT NULL );
create table tags( tag_id INTEGER PRIMARY KEY, tag TEXT );
create table notes_tags(
   note_id INTEGER,
   tag_id INTEGER,
   PRIMARY KEY ( note_id, tag_id ),
   FOREIGN KEY ( note_id )
   REFERENCES notes (note_id)
   ON DELETE CASCADE,
   FOREIGN KEY (tag_id)
   REFERENCES tags ( tag_id )
   ON DELETE CASCADE);

PRAGMA foreign_keys=on;
