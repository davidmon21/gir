#!/usr/bin/env ruby

require 'curses'

Curses.init_screen()
my_str = "test test TESTING"
win = Curses::Window.new(8, (my_str.length + 10),
                         (Curses.lines - 8) / 2,
                         (Curses.cols - (my_str.length + 10)) / 2)

win.box("|","-")
win.setpos(2,3)
win.addstr(my_str)

win.refresh
win.getch
win.close
